@model WiseCart.Front.Models.ViewModel.ShoppingViewModel

@{
    var color = Model._active ? "success" : "dark";
    var title = Model._active ? "Continuar compra" : "Detalhes da Compra";
    var titleButton = Model._active ? "Acessar carrinho" : "Visualizar itens";
}

<div class="container mt-4">
    <div class="card">
        <div class="card-header bg-@color text-white">
            <h4 class="mb-0">@title</h4>
        </div>
        <div class="card-body">
            <div class="row mb-3">
                <div class="col-sm-6">
                    <div class="form-group">
                        <label class="font-weight-bold">@Html.DisplayNameFor(model => model._dateStart)</label>
                        @Html.TextBoxFor(model => model._dateStart, new { @class = "form-control text-center", required = "required", disabled = "true" })
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <label class="font-weight-bold">@Html.DisplayNameFor(model => model._dateEnd)</label>
                        @Html.TextBoxFor(model => model._dateEnd, new { @class = "form-control text-center", required = "required", disabled = "true" })
                    </div>
                </div>
            </div>

            <div class="row mb-2">
                <div class="col-sm-4">
                    <div class="form-group">
                        <label class="font-weight-bold">@Html.DisplayNameFor(model => model._market_Name)</label>
                        @Html.TextBoxFor(model => model._market_Name, new { @class = "form-control text-center", required = "required", disabled = "true" })
                    </div>
                </div>
                <div class="col-sm-4">
                    <div class="form-group">
                        <label class="font-weight-bold">@Html.DisplayNameFor(model => model._quantityItens)</label>
                        @Html.TextBoxFor(model => model._quantityItens, new { @class = "form-control text-center", required = "required", disabled = "true" })
                    </div>
                </div>
                <div class="col-sm-4">
                    <div class="form-group">
                        <label class="font-weight-bold">Valor Total</label>
                        @Html.TextBoxFor(model => model._valorTotal, new { @class = "form-control text-center", required = "required", disabled = "true" })
                    </div>
                </div>
            </div>
        </div>
        <div class="row mb-3">
            <div class="col-sm-12">
                <a id="btnShowItems" class="btn btn-@color" onclick="Redirect('@Model.Id')">@titleButton</a>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .form-control-plaintext {
            padding: 0.375rem 0;
            border-bottom: 1px solid #dee2e6;
        }
        .font-weight-bold {
            color: #495057;
        }
    </style>
}

<script>

    function Redirect(id) {
        window.location.href = '@Url.Action("Details", "Shopping")/' + id;
    }

</script>



