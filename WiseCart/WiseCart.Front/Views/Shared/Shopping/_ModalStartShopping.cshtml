@model WiseCart.Front.Models.InputModel.ShoppingInputModel

<form asp-action="CreateShopping" asp-controller="Shopping" method="post">

    <input type="hidden" asp-for="UserId" />

    <div class="form-row row row-mb-3">
        <div class="form-group col-md-3">
            <label for="inputEmail4">Mercado</label>
            @Html.DropDownListFor(model => model.MarketId, new SelectList(Model.Markets, "Id", "Name"), "Selecione...", new { @class = "form-control", required = "required" })
            <span asp-validation-for="MarketId" class="text-danger"></span>
        </div>
        <div class="form-group col-md-3">
            <br />
            <button type="submit" class="btn btn-success">Iniciar</button>
        </div>
    </div>
    <div class="form-row row row-mb-3">
        
    </div>

    
</form>



