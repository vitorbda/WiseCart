<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WiseCart.Front</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WiseCart.Front.styles.css" asp-append-version="true" />

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    @RenderSection("Styles", required: false)
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">WiseCart.Front</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Shopping" asp-action="Index">Shopping</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
            @RenderSection("Scripts", required: false)
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - WiseCart.Front - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/quagga.min.js"></script>
    <script>

                $(document).ready(function() {

            try {
                navigator.mediaDevices.enumerateDevices()
                    .then(devices => {
                        // Filtra apenas câmeras
                        const cameras = devices.filter(device => device.kind === 'videoinput');

                        const selectedCamera = cameras[3];
                        window.cameraId = selectedCamera.deviceId;

                    })
                    .catch(error => {
                        console.error('Erro ao enumerar dispositivos:', error);
                        alert('Erro: ' + error.message);
                    });
            } catch(e) {
                console.error('Erro no bloco try:', e);
            }
        });

                window.onerror = function(message, source, lineno, colno, error) {

                    const bkp = window.onerror;
            // Monta a mensagem de erro completa
            const errorMessage = `
                Ocorreu um erro:

                Mensagem: ${message}
                Arquivo: ${source}
                Linha: ${lineno}
                Coluna: ${colno}
                ${error ? 'Stack: ' + error.stack : ''}
            `;

            // Exibe o alerta com os detalhes do erro
            //alert(errorMessage);

            // Retorna true para evitar que o erro apareça no console também
            // Retorne false se quiser que o erro ainda apareça no console
            return false;
        };

        
    </script>
</body>
</html>
